<div class="card-group">
  {{# each products }}
    	{{# each this }}
  
		  <div class="card">
		    <img class="card-img-top" src="{{ this.imagePath }}" alt="Card image cap">
		    <div class="card-body">
		      <h4 class="card-title">{{ this.title }}</h4>
		      <p class="card-text">{{ this.description }}</p>
		      <div class="clearfix">
		      	<div class="price pull-left">${{ this.price }}</div>
		      	<button class="btn btn-default pull-right" type="submit">Add to shopping cart</button>
		      </div>
		    </div>
		  </div>
		{{/each}}
  {{/each}}
</div>